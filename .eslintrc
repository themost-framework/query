{
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jquery": true
    },
    "globals": {
      "describe": false,
      "it": false,
      "Promise": true
    },
    "plugins": [
      "promise"
    ],
    "extends": [
        "eslint:recommended",
        "eslint-node:recommended"
    ],
    "rules": {
      "no-console": "warn",
      "no-invalid-this": "warn",
      "no-undef": "error",
      "no-unused-vars": "warn",
      "strict": [
        2,
        "never"
      ]
    },
  "ignorePatterns": [
    "*.d.ts"
  ]
}
